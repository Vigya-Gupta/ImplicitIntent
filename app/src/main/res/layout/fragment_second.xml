<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232F34"
    tools:context=".SecondFragment">

    <TextView
        android:id="@+id/phText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="166dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Enter Phone Number:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#F9AA33"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:foregroundTint="#F9AA33"
        android:inputType="phone"
        android:textColor="#F9AA33"
        android:textColorHighlight="#F9AA33"
        android:textColorHint="#F9AA33"
        android:textColorLink="#F9AA33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phText" />

    <ImageButton
        android:id="@+id/btnCall"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#232F34"
        android:src="@drawable/ic_baseline_call_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phoneNum" />

</androidx.constraintlayout.widget.ConstraintLayout>