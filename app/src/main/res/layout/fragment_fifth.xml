<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232F34"
    tools:context=".FifthFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="156dp"
        android:layout_height="62dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="98dp"
        android:text="Choose Time for Alarm:"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F9AA33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/timeShow"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="110dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="110dp"
        android:text="Time "
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F9AA33"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/timeSelect"
        android:layout_width="92dp"
        android:layout_height="40dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="78dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_alarm_add_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="154dp"
        android:layout_height="61dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="88dp"
        android:text="Choose Date for event :"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F9AA33"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/dateShow"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/dateSelect"
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="88dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_calendar_today_24"
        app:layout_constraintBottom_toTopOf="@+id/dateShow"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dateShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="148dp"
        android:text="Date"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#F9AA33"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
